PACKAGE		=@PACKAGE@

FL_API_VERSION = @FL_API_VERSION@

# directories
EFLTK_BUILDDIR = @EFLTK_BUILDDIR@
EFLTK_BINDIR   = $(EFLTK_BUILDDIR)/bin
EFLTK_LIBDIR   = $(EFLTK_BUILDDIR)/lib

SYSTYPE	       = @SYSTYPE@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
datadir		= @datadir@
includedir	= @includedir@
libdir		= @libdir@
mandir		= @mandir@
srcdir		= @srcdir@
VPATH		= @srcdir@

# compiler names:
CXX		=@CXX@
CC		=@CC@
MAKEDEPEND	=@MAKEDEPEND@

STRIP           =@STRIP_PATH@

# flags for compiler:
# WALL            = -Wcomment -Wformat -Wimplicit-int -Werror-implicit-function-declaration -Wmain -Wmultichar -Wparentheses -Wreturn-type -Wswitch -Wunused
WALL            = -Wall
CFLAGS		= -DHAVE_CONFIG_H -I$(EFLTK_BUILDDIR) $(WALL) @CFLAGS@ @DEBUGFLAG@
CXXFLAGS	= -DHAVE_CONFIG_H -I$(EFLTK_BUILDDIR) $(WALL) @CXXFLAGS@ @DEBUGFLAG@

# static libs:
LIBEXT		=@LIBEXT@
LIBCOMMAND	=@LIBCOMMAND@
RANLIB		=@RANLIB@

# shared libs:
DSOEXT		=@DSOEXT@
DSOSHORTEXT	=@DSOSHORTEXT@
DSOCOMMAND	=@DSOCOMMAND@
DSOCFLAGS	=@DSOCFLAGS@ -DFL_LIBRARY

THEMECOMMAND	=@THEMECOMMAND@
LD		=@LD@

# efltk libs
FLLIB		=@FLLIB@
FLGLLIB		=@FLGLLIB@
FLIMAGESLIB	=@FLIMAGESLIB@
FLXMLLIB	=@FLXMLLIB@

# external libs
THREADSLIBS	=@THREADSLIBS@
JPEGLIBS	=@LIBJPEG@
PNGLIBS		=@LIBPNG@

# libraries to link with:
LDLIBS		=@LDFLAGS@ $(FLLIB) @LDLIBS@
DSOLIBS		=@DSOLIBS@
THEMELIBS	=@THEMELIBS@
GLDLIBS		=$(FLGLLIB) @GLLIB@
IMAGELIBS	=$(FLIMAGESLIB) $(JPEGLIBS) $(PNGLIBS)
XMLLIBS		=$(FLXMLLIB)

EXEEXT		=@EXEEXT@
BUILDTARGETS	=@BUILDTARGETS@
INSTALLTARGETS	=@INSTALLTARGETS@

# Build commands and filename extensions...
.SUFFIXES:	.0 .1 .3 .c .cxx .h .fl .man .o .z $(EXEEXT)

.o$(EXEEXT):
	@echo Linking $@...
	@$(CXX) $(CXXFLAGS) $< $(LINKFLTK) $(LDLIBS) -o $@
#	$(POSTBUILD) $@ ../FL/mac.r

.c.o:
	@echo Compiling $<...
	@$(CC) $(CFLAGS) -c $< -o $@

.cpp.o:
	@echo Compiling $<...
	@$(CXX) $(CXXFLAGS) -c $< -o $@

%.static.o : %.cpp
	@echo Compiling $<...
	@$(CXX) $(CXXFLAGS) -c $< -o $@

%.static.o : %.c
	@echo Compiling $<...
	@$(CC) $(CFLAGS) -c $< -o $@

%.shared.o : %.cpp
	@echo Compiling $<...
	@$(CXX) $(DSOCFLAGS) $(CXXFLAGS) -c $< -o $@

%.shared.o : %.c
	@echo Compiling $<...
	@$(CC) $(DSOCFLAGS) $(CFLAGS) -c $< -o $@

.man.0 .man.1 .man.3:
	@echo Formatting $<...
	-@rm -f $@
	@$(NROFF) -man $< >$@

.man.z:
	@echo Formatting $<...
	-@rm -f $@ t.z
	@$(NROFF) -man $< >t
	@pack -f t
	@mv t.z $@

