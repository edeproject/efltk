PACKAGE		=@PACKAGE@

prefix		=@prefix@
exec_prefix	=@exec_prefix@
bindir		=@bindir@
includedir	=@includedir@
libdir		=@libdir@
srcdir		=@srcdir@
VPATH		=@srcdir@

SYSTYPE		=@SYSTYPE@

COMPILE_XUTF	=@COMPILE_XUTF@

# compiler names:
CXX		=@CXX@
CC		=@CC@
MAKEDEPEND	=@MAKEDEPEND@

# flags for C++ compiler:
# WAS: I removed the -I@srcdir@, please use "xyz" rather than <xyz>
# for files that are in the same directory as the source file.
CFLAGS		= -DHAVE_CONFIG_H @DEBUGFLAG@ -I.. @CFLAGS@
CXXFLAGS	= -DHAVE_CONFIG_H @DEBUGFLAG@ -I.. @CXXFLAGS@
DSOCFLAGS	=@DSOCFLAGS@

# program to make the archive:
LIBEXT		=@LIBEXT@
LIBCOMMAND	=@LIBCOMMAND@
RANLIB		=@RANLIB@
DSOEXT		=@DSOEXT@
DSOSHORTEXT	=@DSOSHORTEXT@
DSOCOMMAND	=@DSOCOMMAND@
THEMECOMMAND	=@THEMECOMMAND@

LD		=@LD@

# libraries to link with:
LDLIBS		=@LDFLAGS@ @FLLIB@ @LDLIBS@
DSOLIBS		=@DSOLIBS@
THEMELIBS	=@THEMELIBS@
GLDLIBS		=@FLGLLIB@ @GLLIB@
GLUTLIBS	=@FLGLUTLIB@ @FLGLLIB@ @GLLIB@
FORMSLIBS	=@FLFORMSLIB@
IMAGELIBS	=@FLIMAGESLIB@
THREADSLIBS	=@THREADSLIBS@
JPEGLIBS	=@LIBJPEG@
PNGLIBS		=@LIBPNG@

FLLIB		=@FLLIB@
FLGLLIB		=@FLGLLIB@
FLGLUTLIB	=@FLGLUTLIB@
FLFORMSLIB	=@FLFORMSLIB@
FLIMAGESLIB	=@FLIMAGESLIB@

EXEEXT		=@EXEEXT@
BUILDTARGETS	=@BUILDTARGETS@
INSTALLTARGETS	=@INSTALLTARGETS@

# Build commands and filename extensions...
.SUFFIXES:	.0 .1 .3 .c .cxx .h .fl .man .o .z $(EXEEXT)

.o$(EXEEXT):
	@echo Linking $@...
	@$(CXX) -I.. -I../.. $(CXXFLAGS) $< $(LINKFLTK) $(LDLIBS) -o $@
#	$(POSTBUILD) $@ ../FL/mac.r

.c.o:
	@echo Compiling $<...
	@$(CC) -I.. -I../.. $(CFLAGS) -c $< -o $@

.cpp.o:
	@echo Compiling $<...
	@$(CXX) -I.. -I../.. $(CXXFLAGS) -c $< -o $@

%.shared.o : %.cpp
	@echo Compiling $<...
	@$(CXX) -I.. -I../.. $(DSOCFLAGS) $(CXXFLAGS) -c $< -o $@

%.shared.o : %.c
	@echo Compiling $<...
	@$(CC) -I.. -I../.. $(DSOCFLAGS) $(CFLAGS) -c $< -o $@

.man.0 .man.1 .man.3:
	@echo Formatting $<...
	-@rm -f $@
	@$(NROFF) -man $< >$@

.man.z:
	@echo Formatting $<...
	-@rm -f $@ t.z
	@$(NROFF) -man $< >t
	@pack -f t
	@mv t.z $@

