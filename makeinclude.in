PACKAGE		=@PACKAGE@

EFLTK_BUILDDIR = @EFLTK_BUILDDIR@
FL_API_VERSION = @FL_API_VERSION@
SYSTYPE	       = @SYSTYPE@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
datadir		= @datadir@
includedir	= @includedir@
libdir		= @libdir@
mandir		= @mandir@
srcdir		= @srcdir@
VPATH		= @srcdir@

# compiler names:
CXX		=@CXX@
CC		=@CC@
MAKEDEPEND	=@MAKEDEPEND@

STRIP           =@STRIP_PATH@

# flags for C++ compiler:
# WAS: I removed the -I@srcdir@, please use "xyz" rather than <xyz>
# for files that are in the same directory as the source file.
CFLAGS		= -DHAVE_CONFIG_H @CFLAGS@ @DEBUGFLAG@
CXXFLAGS	= -DHAVE_CONFIG_H @CXXFLAGS@ @DEBUGFLAG@
DSOCFLAGS	= @DSOCFLAGS@ -DFL_LIBRARY

# static libs:
LIBEXT		=@LIBEXT@
LIBCOMMAND	=@LIBCOMMAND@
RANLIB		=@RANLIB@

# shared libs:
DSOEXT		=@DSOEXT@
DSOSHORTEXT	=@DSOSHORTEXT@
DSOCOMMAND	=@DSOCOMMAND@

THEMECOMMAND	=@THEMECOMMAND@
LD		=@LD@

# libraries to link with:
LDLIBS		=@LDFLAGS@ @FLLIB@ @LDLIBS@
DSOLIBS		=@DSOLIBS@
THEMELIBS	=@THEMELIBS@
GLDLIBS		=@FLGLLIB@ @GLLIB@
IMAGELIBS	=@FLIMAGESLIB@
THREADSLIBS	=@THREADSLIBS@
JPEGLIBS	=@LIBJPEG@
PNGLIBS		=@LIBPNG@

FLLIB		=@FLLIB@
FLGLLIB		=@FLGLLIB@
FLGLUTLIB	=@FLGLUTLIB@
FLFORMSLIB	=@FLFORMSLIB@
FLIMAGESLIB	=@FLIMAGESLIB@
FLXMLLIB	=@FLXMLLIB@

EXEEXT		=@EXEEXT@
BUILDTARGETS	=@BUILDTARGETS@
INSTALLTARGETS	=@INSTALLTARGETS@

# Build commands and filename extensions...
.SUFFIXES:	.0 .1 .3 .c .cxx .h .fl .man .o .z $(EXEEXT)

.o$(EXEEXT):
	@echo Linking $@...
	@$(CXX) -I$(EFLTK_BUILDDIR) $(CXXFLAGS) $< $(LINKFLTK) $(LDLIBS) -o $@
#	$(POSTBUILD) $@ ../FL/mac.r

.c.o:
	@echo Compiling $<...
	@$(CC) -I$(EFLTK_BUILDDIR) $(CFLAGS) -c $< -o $@

.cpp.o:
	@echo Compiling $<...
	@$(CXX) -I$(EFLTK_BUILDDIR) $(CXXFLAGS) -c $< -o $@

%.static.o : %.cpp
	@echo Compiling $<...
	@$(CXX) -I$(EFLTK_BUILDDIR) $(CXXFLAGS) -c $< -o $@

%.static.o : %.c
	@echo Compiling $<...
	@$(CC) -I$(EFLTK_BUILDDIR) $(CFLAGS) -c $< -o $@

%.shared.o : %.cpp
	@echo Compiling $<...
	@$(CXX) -I$(EFLTK_BUILDDIR) $(DSOCFLAGS) $(CXXFLAGS) -c $< -o $@

%.shared.o : %.c
	@echo Compiling $<...
	@$(CC) -I$(EFLTK_BUILDDIR) $(DSOCFLAGS) $(CFLAGS) -c $< -o $@

.man.0 .man.1 .man.3:
	@echo Formatting $<...
	-@rm -f $@
	@$(NROFF) -man $< >$@

.man.z:
	@echo Formatting $<...
	-@rm -f $@ t.z
	@$(NROFF) -man $< >t
	@pack -f t
	@mv t.z $@

